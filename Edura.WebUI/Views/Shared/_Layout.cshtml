                            <li><a href="#" class="youtube"><i class="fa fa-youtube youtube"></i></a></li>
              
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <h3>İletişim</h3>
                        <br>
                        <p><i class="fa fa-map-pin fa-fw"></i>İzmir/Konak</p>
                        <p><i class="fa fa-phone fa-fw"></i> +(505) 345 6879</p>
                        <p><i class="fa fa-phone fa-fw"></i> +(232) 487 6875</p>
                        <p><i class="fa fa-envelope fa-fw"></i>organik@gmail.com</p>
                    </div>
                 
                </div>
         
            </div>
        </section>
        <!-- FOOTER END -->

    </div>
    <!-- WRAPPER END -->
    <!-- back to top button -->
    <a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="Click to return on the top page" data-toggle="tooltip" data-placement="left"><span class="glyphicon glyphicon-chevron-up"></span></a>

